{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "linux": {
                "command": "cmake -DCMAKE_BUILD_TYPE=DEBUG .."
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "make",
            "type": "shell",
            "linux": {
                "command": "make -j$(nproc)"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "main",
            "type": "shell",
            "linux": {
                "command": "make -j$(nproc) && ${workspaceFolder}/build/bin/main"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        }
    ]
}